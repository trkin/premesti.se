<% login_layout %>
<h2><%= t "my_devise.resend_confirmation_instructions" %></h2>

<%= bootstrap_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <%= f.email_field :email, autofocus: true, label: t('neo4j.attributes.user.email'), value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>

  <%= f.submit t("my_devise.resend_confirmation_instructions") %>
<% end %>

<%= render "devise/shared/links" %>
