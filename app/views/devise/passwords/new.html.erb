<% login_layout %>
<h2><%= t "my_devise.forgot_password" %></h2>

<%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <%= f.email_field :email, label: t('neo4j.attributes.user.email'), autofocus: true %>

  <%= f.submit t("my_devise.send_me_reset_password_instructions") %>
<% end %>

<%= render "devise/shared/links" %>
